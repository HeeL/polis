
	<% @articles.each do |article| %>
	<li>
		<div class="news__item-top">
			<div class="news__item-image"><%= image_tag(article.photo.url(:content)) %></div>
			<%= link_to article.title, article %>
			<span><%= article.date %> 
					<% if article.office_id != nil %> | 
					<%=	Office.where(:id => article.office_id).first.title %>
					<%	else 
						nil
						end %>
			</span>
		</div>
		<p><%= truncate(strip_tags(article.description), length: 600).html_safe %></p>
		<%= link_to "Читать полностью", article, :class => 'news__item-open' %>
	</li>
	<% end %>				
