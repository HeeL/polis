<div class="body clearfix" style="min-height: 500px;">
	<h1><%= @service.title %></h1>
		<!-- left -->
		<div class="body__left">
			<div class="left__menu">
				<h3 class="left__menu-title">Услуги компании «Полис»:</h3>
				<ul>
					<% @services.each do |service| %>
			      	<%= content_tag :li, :class => ('left__menu-selected' if @service == service) do %>
					<%= link_to service.title, service %>
					<% end %>
			        <% end %>
				</ul>					
			</div>
		</div>
		<!-- end left -->
		<!-- data -->		
		<div class="body__data">
			<div class="text text__noline">
				<%= sanitize @service.description %>
				<% unless @service.appointment.blank? %>
				<%= render 'button' %>	
				<% end %>	
			</div>

			
		</div>
		<!-- end data -->
	</div>