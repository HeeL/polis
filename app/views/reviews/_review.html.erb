<div id="shadow" style="display:none"></div>
<div class="popupresponse"  style="display:none">
	<a href="javascript:;" class="popupresponse__close"></a>
	<h2 class="popupresponse__title">Оставить свой отзыв</h2>
	<div class="popupresponse__data">
		<%= form_for(@review) do |f| %>
		<div class="popupresponse__left clearfix"><label>Я хочу</label><select><option>Пожаловаться</option><option>Поблагодарить</option></select></div>
		<div class="popupresponse__right">
			<div class="popupresponse__line popupresponse__line-first clearfix"><label>Отделение</label><select><option>Коменданский проспект, 299</option></select></div>
			<div class="popupresponse__line clearfix"><input type="checkbox" /><label>Врач</label><select><option>Борменталь Игорь Борисович</option></select></div>
		</div>			
		<a href="javascript:;" class="popupresponse__line-add">Еще один врач</a>
	</div>
	<div class="popupresponse__info clearfix">
		<label>Представьтесь:</label>
		<%= f.text_field :author, :class => 'popupresponse__name', :value=> "Введите Ваше имя..." %>
		<%= f.text_field :contact, :class => 'popupresponse__email', :value=> "e-mail или номер телефона" %>
	</div>
	<%= f.text_area :description, :value=> "Ваш отзыв" %>
	<%= f.submit %>
	
	<% end %>
</div>